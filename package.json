{
  "name": "starspace",
  "private": true,
  "version": "0.1.3",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:server": "echo 'Server build skipped (JS only)'",
    "build:all": "npm run build && npm run build:server",
    "preview": "vite preview",
    "server": "node server.cjs",
    "server:online": "node tools/start-online.cjs",
    "playtest:start": "npm run build:server && pm2 start server.cjs --name starfield-playtest",
    "playtest:stop": "pm2 stop starfield-playtest",
    "playtest:restart": "pm2 restart starfield-playtest",
    "playtest:logs": "pm2 logs starfield-playtest",
    "playtest:status": "pm2 status",
    "electron:dev": "electron .",
    "electron:build": "npm run build && electron-builder",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "gource": "gource --auto-skip-seconds 1 --seconds-per-day 1 --title \"Starfield Development Visualization\" --background-colour 000000 --font-size 24 --hide filenames,dirnames,usernames --ignore-files \".*kenney.*\""
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.16",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "electron-packager": "^17.1.2",
    "jsdom": "^27.4.0",
    "ngrok": "^5.0.0-beta.2",
    "typescript": "~5.9.3",
    "vite": "^7.2.4",
    "vitest": "^4.0.16",
    "wait-on": "^9.0.3"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.89.0",
    "dotenv": "^17.2.3",
    "electron-updater": "^6.3.9",
    "ws": "^8.18.3",
    "zod": "^4.3.5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fxdjodjo-hue/starfield.git"
  },
  "build": {
    "appId": "com.starfield.game",
    "productName": "Starspace",
    "publish": [
      {
        "provider": "github",
        "owner": "fxdjodjo-hue",
        "repo": "starfield"
      }
    ],
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "compression": "normal",
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico",
      "artifactName": "${productName}Setup-${version}.${ext}"
    }
  }
}