{
  "name": "starfield",
  "private": true,
  "version": "0.1.0-alpha",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:server": "tsc --project tsconfig.server.json && move dist-server\\shared\\SecurityBoundary.js dist-server\\shared\\SecurityBoundary.cjs",
    "build:all": "npm run build && npm run build:server",
    "preview": "vite preview",
    "server": "node server.cjs",
    "server:online": "node tools/start-online.cjs",
    "playtest:start": "npm run build:server && pm2 start server.cjs --name starfield-playtest",
    "playtest:stop": "pm2 stop starfield-playtest",
    "playtest:restart": "pm2 restart starfield-playtest",
    "playtest:logs": "pm2 logs starfield-playtest",
    "playtest:status": "pm2 status",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.16",
    "jsdom": "^27.4.0",
    "ngrok": "^5.0.0-beta.2",
    "typescript": "~5.9.3",
    "vite": "^7.2.4",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.89.0",
    "dotenv": "^17.2.3",
    "ws": "^8.18.3",
    "zod": "^4.3.5"
  }
}